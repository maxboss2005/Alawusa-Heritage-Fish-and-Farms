      // Get order ID from URL
      const urlParams = new URLSearchParams(window.location.search);
      const orderId = urlParams.get("id");

      // Format date
      function formatDate(dateString) {
        if (!dateString) return "Not set";
        const date = new Date(dateString);
        return date.toLocaleDateString("en-US", {
          year: "numeric",
          month: "long",
          day: "numeric",
          hour: "2-digit",
          minute: "2-digit",
        });
      }

      // Format currency
      function formatCurrency(amount, currency) {
        const symbols = {
          NGN: "₦",
          USD: "$",
          GBP: "£",
          EUR: "€",
        };
        const symbol = symbols[currency] || "₦";
        return `${symbol}${amount ? amount.toLocaleString() : "0"}`;
      }

      // Get status class
      function getStatusClass(status) {
        switch (status) {
          case "awaiting_payment":
            return "status-awaiting";
          case "processing":
            return "status-processing";
          case "shipped":
            return "status-shipped";
          case "delivered":
            return "status-delivered";
          default:
            return "status-awaiting";
        }
      }

      // Get status text
      function getStatusText(status) {
        switch (status) {
          case "awaiting_payment":
            return "Awaiting Payment";
          case "processing":
            return "Processing";
          case "shipped":
            return "Shipped";
          case "delivered":
            return "Delivered";
          default:
            return status;
        }
      }

      // Render order details
      function renderOrderDetails(order) {
        const subtotal = order.items.reduce(
          (sum, item) => sum + (item.subtotal || 0),
          0
        );
        
        // Calculate shipping based on quantity
        const shippingFeePerUnit = 1600; // Base shipping fee per unit
        const totalQuantity = order.items.reduce(
          (sum, item) => sum + (item.quantity || 0),
          0
        );
        const shipping = shippingFeePerUnit * totalQuantity;
        
        const total = (order.totalAmount || subtotal);

        orderDetailsContainer.innerHTML = `
          <div class="order-details-container">
              <!-- Company Header for Print -->
              <div class="company-header">
                <div class="logo-container">
                  
                  <div>
                    <h1 class="company-name">Alawusa Heritage Fish & Farms</h1>
                    <p class="company-tagline">Bringing the Best of Our Farm to Your Table</p>
                  </div>
                </div>
              </div>

              <!-- Order Header -->
              <div class="order-header">
                  <div class="order-info">
                      <h1>Order #${order.orderId}</h1>
                      <div class="order-date">Placed on ${formatDate(
                        order.createdAt
                      )}</div>
                      ${
                        order.updatedAt !== order.createdAt
                          ? `<div class="order-date" style="margin-top: 5px;">Last updated: ${formatDate(
                              order.updatedAt
                            )}</div>`
                          : ""
                      }
                  </div>
                  <div class="order-status-container">
                      <div class="order-status-badge ${getStatusClass(
                        order.status
                      )}">
                          ${getStatusText(order.status)}
                      </div>
                  </div>
              </div>

              <!-- Customer Information -->
              <div class="order-section">
                  <h2 class="section-title"><i class="fas fa-user"></i> Customer Information</h2>
                  <div class="customer-info-grid">
                      <div class="info-item">
                          <div class="info-label">Name</div>
                          <div class="info-value">${
                            order.customerName
                          }</div>
                      </div>
                      <div class="info-item">
                          <div class="info-label">Phone</div>
                          <div class="info-value">${
                            order.customerPhone
                          }</div>
                      </div>
                      <div class="info-item">
                          <div class="info-label">Email</div>
                          <div class="info-value">${
                            order.customerEmail || "Not provided"
                          }</div>
                      </div>
                      <div class="info-item" style="grid-column: 1 / -1;">
                          <div class="info-label">Delivery Address</div>
                          <div class="info-value">${
                            order.customerAddress
                          }</div>
                      </div>
                  </div>
              </div>

              <!-- Order Items -->
              <div class="order-section">
                  <h2 class="section-title"><i class="fas fa-box"></i> Order Items</h2>
                  <table class="order-items-table">
                      <thead>
                          <tr>
                              <th>Product</th>
                              <th>Price</th>
                              <th>Quantity</th>
                              <th>Subtotal</th>
                          </tr>
                      </thead>
                      <tbody>
                          ${order.items
                            .map(
                              (item) => `
                              <tr>
                                  <td>
                                      <div style="display: flex; align-items: center; gap: 15px;">
                                          <img src="${
                                            item.image ||
                                            "placeholder-image.jpg"
                                          }" alt="${
                                item.productName
                              }" class="order-item-image">
                                          <div>
                                              <div class="order-item-name">${
                                                item.productName
                                              }</div>
                                              ${
                                                item.productId
                                                  ? `<small style="color: #666;">ID: ${item.productId}</small>`
                                                  : ""
                                              }
                                          </div>
                                      </div>
                                  </td>
                                  <td class="order-item-price">${formatCurrency(
                                    item.price,
                                    order.currency
                                  )}</td>
                                  <td>${item.quantity}</td>
                                  <td class="order-item-price">${formatCurrency(
                                    item.subtotal,
                                    order.currency
                                  )}</td>
                              </tr>
                          `
                            )
                            .join("")}
                      </tbody>
                  </table>
              </div>

              <!-- Payment Information -->
              <div class="order-section">
                  <h2 class="section-title"><i class="fas fa-credit-card"></i> Payment Information</h2>
                  <div class="payment-info">
                      <div class="payment-details">
                          <div class="info-item">
                              <div class="info-label">Payment Method</div>
                              <div class="info-value">${
                                order.paymentMethod || "Bank Transfer"
                              }</div>
                          </div>
                          <div class="info-item">
                              <div class="info-label">Currency</div>
                              <div class="info-value">${
                                order.currency || "NGN"
                              }</div>
                          </div>
                          <div class="info-item">
                              <div class="info-label">Payment Status</div>
                              <div class="info-value">
                                  <span class="${getStatusClass(
                                    order.status
                                  )}" style="padding: 4px 12px; border-radius: 20px; font-size: 12px;">
                                      ${getStatusText(order.status)}
                                  </span>
                              </div>
                          </div>
                      </div>
                  </div>
              </div>

              <!-- Order Summary -->
              <div class="order-summary">
                  <h2 class="section-title"><i class="fas fa-receipt"></i> Order Summary</h2>
                  <div class="summary-row">
                      <span>Subtotal</span>
                      <span>${formatCurrency(
                        subtotal,
                        order.currency
                      )}</span>
                  </div>
                  <div class="summary-row">
                      <span>Shipping (${totalQuantity} item${totalQuantity > 1 ? 's' : ''} × ${formatCurrency(1600, order.currency)})</span>
                      <span>${formatCurrency(
                        shipping,
                        order.currency
                      )}</span>
                  </div>
                  
                  <div class="summary-row summary-total">
                      <span>Total</span>
                      <span>${formatCurrency(
                        total,
                        order.currency
                      )}</span>
                  </div>
              </div>

              <!-- Print Footer -->
              <div class="print-footer">
                <p>Thank you for your order! </p>
              </div>

              <!-- Action Buttons -->
              <div class="action-buttons">
                  <a href="userorders.html" class="btn btn-outline">
                      <i class="fas fa-arrow-left"></i> Back to Orders
                  </a>
                  
                  <button onclick="window.print()" class="btn btn-outline">
                      <i class="fas fa-print"></i> Print Receipt
                  </button>
              </div>
          </div>
        `;
      }

      // Load order details
      async function loadOrderDetails() {
        if (!orderId) {
          orderDetailsContainer.innerHTML = `
                    <div class="error-container">
                        <i class="fas fa-exclamation-circle"></i>
                        <h2>No Order ID Provided</h2>
                        <p>Please go to your orders page and select an order to view details.</p>
                        <a href="userorders.html" class="btn btn-primary" style="margin-top: 20px;">
                            <i class="fas fa-arrow-left"></i> Back to Orders
                        </a>
                    </div>
                `;
          return;
        }

        orderDetailsContainer.innerHTML = `
                <div class="loading">
                    <div class="spinner"></div>
                    <p>Loading order details...</p>
                </div>
            `;

        try {
          const orderRef = doc(db, "orders", orderId);
          const orderSnap = await getDoc(orderRef);

          if (!orderSnap.exists()) {
            throw new Error("Order not found");
          }

          const order = orderSnap.data();

          // Check if user is authorized to view this order
          const user = auth.currentUser;
          if (
            !user ||
            (order.userId !== user.uid && order.userId !== "guest_" + user.uid)
          ) {
            orderDetailsContainer.innerHTML = `
                        <div class="error-container">
                            <i class="fas fa-lock"></i>
                            <h2>Access Denied</h2>
                            <p>You are not authorized to view this order.</p>
                            <a href="userorders.html" class="btn btn-primary" style="margin-top: 20px;">
                                <i class="fas fa-arrow-left"></i> Back to Orders
                            </a>
                        </div>
                    `;
            return;
          }

          renderOrderDetails(order);

          // Set up real-time updates
          onSnapshot(orderRef, (doc) => {
            if (doc.exists()) {
              renderOrderDetails(doc.data());
            }
          });
        } catch (error) {
          console.error("Error loading order:", error);
          orderDetailsContainer.innerHTML = `
                    <div class="error-container">
                        <i class="fas fa-exclamation-circle"></i>
                        <h2>Error Loading Order</h2>
                        <p>${error.message}</p>
                        <div style="display: flex; gap: 10px; margin-top: 20px;">
                            <a href="userorders.html" class="btn btn-outline">
                                <i class="fas fa-arrow-left"></i> Back to Orders
                            </a>
                            <button onclick="loadOrderDetails()" class="btn btn-primary">
                                <i class="fas fa-redo"></i> Try Again
                            </button>
                        </div>
                    </div>
                `;
        }
      }

      // Update cart count
      function updateCartCount() {
        const cart = JSON.parse(localStorage.getItem("cart")) || [];
        const totalItems = cart.reduce(
          (total, item) => total + item.quantity,
          0
        );
        cartCountElement.textContent = totalItems;
      }

      // Auth state listener
      onAuthStateChanged(auth, (user) => {
        if (user) {
          userNameElement.textContent =
            user.displayName || user.email || "Customer";
          loadOrderDetails();
        } else {
          userNameElement.textContent = "Guest";
          loadOrderDetails(); // Still try to load order (guest orders)
        }
      });

      // Initialize
      document.addEventListener("DOMContentLoaded", () => {
        updateCartCount();

        // Mobile menu toggle
        document.querySelector(".menu-toggle").addEventListener("click", () => {
          document.querySelector(".navbar ul").classList.toggle("show");
        });
      });
    </script>
  </body>
</html>

